<!DOCTYPE html>
<html lang="ar">
<head>
  <meta charset="UTF-8">
  <title>بطاقة الموظف</title>
<style>
    body {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #eef2f7;
  height: 100vh;
  margin: 0;
}

.card.modern {
  background: linear-gradient(135deg,#6a11cb,#2575fc);
  color: white;
  border-radius: 20px;
  padding: 25px;
  text-align: center;
  width: 300px;
}

.card.modern .avatar {
  border-radius: 50%;
  width: 120px;
  border: 4px solid white;
  margin: 15px 0;
}
</style>
</head>
<body>
    <% if (employee) { %>
    <div class="card modern">
<!-- داخل div.card -->
<h2><%= employee.name %></h2>
<p>الوظيفة: <%= employee.jobTitle || 'غير متوفر' %></p>

<!-- الحقول المتكررة -->
<p>📞 <%= employee.phoneTitle || 'الهاتف' %>: <%= employee.phone || 'غير متوفر' %></p>
<p>📧 <%= employee.emailTitle || 'البريد الإلكتروني' %>: <%= employee.email || 'غير متوفر' %></p>
<p>📍 <%= employee.locationTitle || 'الموقع' %>: <%= employee.location || 'غير متوفر' %></p>

<!-- باقي الحقول -->
<p>واتساب: <%= employee.whatsapp || 'غير متوفر' %></p>
<p>Wechat: <%= employee.wechat || 'غير متوفر' %></p>
<p>SMS: <%= employee.smsNumber || 'غير متوفر' %></p>
<p>فاكس: <%= employee.faxNumber || 'غير متوفر' %></p>
<p>عن الموظف: <%= employee.about || 'غير متوفر' %></p>
<p>الشركة: <%= employee.company?.name || 'غير متوفر' %></p>

<!-- الصور الشخصية والثانوية -->
<% if (employee.profileImageUrl) { %>
  <img src="<%= employee.profileImageUrl %>" alt="الصورة الشخصية" />
<% } %>
<% if (employee.secondaryImageUrl) { %>
  <img src="<%= employee.secondaryImageUrl %>" alt="صورة إضافية" />
<% } %>

<!-- صور إضافية -->
<% if (employee.customImageUrl) { %>
  <h4><%= employee.customImageTitle || 'صورة مخصصة' %></h4>
  <img src="<%= employee.customImageUrl %>" alt="Custom Image" />
  <p><%= employee.customImageDescription || '' %></p>
<% } %>

<% if (employee.testimonialImageUrl) { %>
  <h4><%= employee.testimonialTitle || 'شهادة العملاء' %></h4>
  <img src="<%= employee.testimonialImageUrl %>" alt="Testimonial" />
  <p><%= employee.testimonialDescription || '' %></p>
  <blockquote><%= employee.testimonialText || '' %></blockquote>
  <p><%= employee.testimonialName || '' %> - <%= employee.testimonialDesignation || '' %></p>
<% } %>

<% if (employee.workingHoursImageUrl) { %>
  <h4>صورة جدول العمل</h4>
  <img src="<%= employee.workingHoursImageUrl %>" alt="Working Hours" />
<% } %>

<!-- جدول المواعيد -->
<% if (employee.workingHours) { %>
  <h4><%= employee.workingHoursTitle || 'ساعات العمل' %></h4>
  <ul>
    <% Object.entries(employee.workingHours).forEach(([day, time]) => { %>
      <li><%= day %>: من <%= time.from %> إلى <%= time.to %></li>
    <% }) %>
  </ul>
<% } %>

<!-- صور الجاليري -->
<% if (employee.images && employee.images.length > 0) { %>
  <h4>📷 معرض الصور</h4>
  <div class="social-images">
    <% employee.images.forEach(img => { %>
      <img src="<%= img.imageUrl %>" alt="<%= img.label || 'صورة' %>" title="<%= img.label || '' %>" />
    <% }) %>
  </div>
<% } %>

<!-- صور السوشيال -->
<div class="social-images">
  <% if (employee.facebookImageUrl) { %>
    <img src="<%= employee.facebookImageUrl %>" alt="Facebook" title="Facebook" />
  <% } %>
  <% if (employee.instagramImageUrl) { %>
    <img src="<%= employee.instagramImageUrl %>" alt="Instagram" title="Instagram" />
  <% } %>
  <% if (employee.tiktokImageUrl) { %>
    <img src="<%= employee.tiktokImageUrl %>" alt="TikTok" title="TikTok" />
  <% } %>
  <% if (employee.snapchatImageUrl) { %>
    <img src="<%= employee.snapchatImageUrl %>" alt="Snapchat" title="Snapchat" />
  <% } %>
</div>

<!-- روابط التواصل -->
<div class="links">
  <p>روابط التواصل:</p>
  <ul>
    <% if (employee.facebook) { %><li>📘 <a href="<%= employee.facebook %>" target="_blank">Facebook</a></li><% } %>
    <% if (employee.instagram) { %><li>📸 <a href="<%= employee.instagram %>" target="_blank">Instagram</a></li><% } %>
    <% if (employee.tiktok) { %><li>🎵 <a href="<%= employee.tiktok %>" target="_blank">TikTok</a></li><% } %>
    <% if (employee.snapchat) { %><li>👻 <a href="<%= employee.snapchat %>" target="_blank">Snapchat</a></li><% } %>
  </ul>

  <p>روابط العمل:</p>
  <ul>
    <% if (employee.workLink) { %><li>🔗 <a href="<%= employee.workLink %>" target="_blank">رابط العمل</a></li><% } %>
    <% if (employee.productsLink) { %><li>🛍️ <a href="<%= employee.productsLink %>" target="_blank">رابط المنتجات</a></li><% } %>
    <% if (employee.buttonLink) { %><li>🧭 <a href="<%= employee.buttonLink %>" target="_blank"><%= employee.buttonLabel || 'زر إضافي' %></a></li><% } %>
    <% if (employee.highRatingRedirectUrl) { %><li>⭐ <a href="<%= employee.highRatingRedirectUrl %>" target="_blank">رابط التقييم العالي</a></li><% } %>
  </ul>
</div>

<!-- PDF -->
<% if (employee.pdfThumbnailUrl) { %>
  <h4><%= employee.pdfGalleryTitle || 'ملف PDF' %></h4>
  <img src="<%= employee.pdfThumbnailUrl %>" alt="PDF Thumbnail" />
  <% if (employee.pdfFileUrl) { %>
    <p><a href="<%= employee.pdfFileUrl %>" target="_blank">📄 تحميل الملف</a></p>
  <% } %>
<% } %>

<!-- فيديو -->
<% if (employee.videoUrl) { %>
  <h4><%= employee.videoTitle || 'فيديو تعريفي' %></h4>
  <p><%= employee.videoDescription || '' %></p>
  <% if (employee.videoType === 'youtube') { %>
    <iframe width="100%" height="315" src="https://www.youtube.com/embed/<%= employee.videoUrl.split('v=')[1] %>" frameborder="0" allowfullscreen></iframe>
  <% } else if (employee.videoType === 'vimeo') { %>
    <iframe src="https://player.vimeo.com/video/<%= employee.videoUrl.split('/').pop() %>" width="100%" height="315" frameborder="0" allowfullscreen></iframe>
  <% } %>
<% } %>

<!-- QR Code -->
<div class="qr">
  <% if (employee.qrCode) { %>
    <img src="<%= employee.qrCode %>" alt="QR Code" width="150" />
  <% } else { %>
    <p>❌ لم يتم توليد QR</p>
  <% } %>
</div>

<!-- رابط البطاقة -->
<% if (employee.cardUrl) { %>
  <p><a href="<%= employee.cardUrl %>" target="_blank">عرض البطاقة الرقمية</a></p>
<% } %>
    </div>
  <% } else { %>
    <p>❌ لا توجد بيانات لعرض البطاقة</p>
  <% } %>
</body>
</html>
